<Page x:Class="Goalscore.Views.Frames.TimedMatchContentFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Goalscore.Views.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="TimedMatchContentFrame">

    <StackPanel Orientation="Vertical">
        <TextBox Style="{StaticResource MatchInfoTextBlock}" Text="Информация о матче" />
        <DockPanel LastChildFill="False">
            <TextBlock Foreground="{DynamicResource SecundaryTextColor}" FontFamily="/Resources/Fonts/#Poppins" Text="Судья" DockPanel.Dock="Left"/>
            <TextBlock Foreground="{DynamicResource SecundaryTextColor}" FontFamily="/Resources/Fonts/#Poppins" x:Name="RefereeTextBlock" Text="-referee-" DockPanel.Dock="Right"/>
        </DockPanel>
        <DockPanel LastChildFill="False">
            <TextBlock Foreground="{DynamicResource SecundaryTextColor}" FontFamily="/Resources/Fonts/#Poppins" Text="Стадион:" DockPanel.Dock="Left"/>
            <TextBlock Foreground="{DynamicResource SecundaryTextColor}" FontFamily="/Resources/Fonts/#Poppins" x:Name="StadiumTextBlock" Text="-stadium-" DockPanel.Dock="Right"/>
        </DockPanel>
    </StackPanel>
</Page>
