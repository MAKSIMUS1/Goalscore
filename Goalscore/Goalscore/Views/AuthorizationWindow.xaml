<Window x:Class="Goalscore.Views.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goalscore.Views"
        mc:Ignorable="d"
        Icon="../icon_main.ico"
        Title="AuthorizationWindow" Height="700" Width="980"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True"
        ResizeMode="NoResize" WindowState="Normal">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Resources/authorization_background.jpg"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame Grid.Row="1" x:Name="AuthorizationFrame" NavigationUIVisibility="Hidden"
               Height="450" Width="800"/>
    </Grid>
</Window>
